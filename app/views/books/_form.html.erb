<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, onfocusout: "name_empty_check()" %>
    <span style="background: red;display: none" id="name_alert">Name can not be empty</span>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, onfocusout: "title_empty_check()" %>
    <span style="background: red;display: none" id="title_alert">Title can not be empty</span>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, onfocusout: "description_empty_check()" %>
    <span style="background: red;display: none" id="description_alert">Description can not be empty</span>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<script>
    function name_empty_check() {
        console.log("I am inside name_empty_check");
        let book_name = document.getElementById("book_name").value
        if (book_name === '') {
            document.getElementById("name_alert").style.display = "block";
        } else {
            document.getElementById("name_alert").style.display = "none";
        }
        // alert("Name can not be empty");
    }

    function title_empty_check() {
        console.log("I am inside title_empty_check");
        let title_name = document.getElementById("book_title").value
        if (title_name === '') {
            document.getElementById("title_alert").style.display = "block";
        }else{
            document.getElementById("title_alert").style.display = "none"
            // alert("Title can not be empty")
        }
    }

    function description_empty_check() {
        console.log("I am inside desc_empty_check");
        let description_name = document.getElementById("book_description").value
        if (description_name === '') {
            document.getElementById("description_alert").style.display = "block";
        }else{
            document.getElementById("description_alert").style.display = "none";
        }
    }
</script>
