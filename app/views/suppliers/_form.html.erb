<%=form_with(model: supplier) do |form|%>
  <% if supplier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(supplier.errors.count,"error")%> Prohibited supplier from being saved:</h2>

    <ul>
      <%supplier.errors.each do |error| %>
      <li><%=error.full_message%></li>
        <% end %>
    </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Supplier_name %>
    <%= form.text_field :name,onfocusout:"name_empty_check()"%>
    <span style="background: red" id="name_alert">Name can not be empty</span>
  </div>

  <div class="actions">
    <%=form.submit %>
  </div>

<% end %>
<script>

    function name_empty_check() {
        let name = document.getElementById("supplier_name").value;
        if (name === '') {
            document.getElementById("name_alert").style.display="block"
        }else{
            document.getElementById("name_alert").style.display="none"
        }
    }



</script>