<h1>All Suppliers</h1>
<table>
  <thead>
  <tr>
    <th>Supplier ID</th>
    <th>Supplier Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>
<tbody>
<% @suppliers.each do |supplier| %>

<tr>

  <td><%=supplier.id %></td>
  <td><%=supplier.name %></td>

  <td><%=link_to 'Show',supplier %></td>
  <td><%=link_to 'Edit',edit_supplier_path(supplier) %></td>
  <td><%=link_to 'Delete',supplier,method: :delete %></td>

</tr>
<% end %>
</tbody>
</table>

<br>

<%=link_to 'New Supplier',new_supplier_path %>